{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(make check:*)",
      "Bash(make test:*)",
      "Bash(make docs:*)",
      "Bash(git fetch:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git reset:*)",
      "Bash(gh api:*)",
      "Bash(git ls-tree:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff format"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true
  }
}
